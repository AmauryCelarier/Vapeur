generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Genre {
  id_genre    Int       @id @default(autoincrement())
  genre       String
  games       Games[]
}

model Editors {
  id_editor   Int       @id @default(autoincrement())
  name        String
  games       Games[]
}

model Games {
  id_game     Int       @id @default(autoincrement())
  title       String
  desc        String
  releaseDate DateTime  @default(now())
  editor      Editors   @relation(fields: [editorId], references: [id_editor])
  editorId    Int
  type        Genre     @relation(fields: [genreId], references: [id_genre])
  genreId     Int
  featured    Boolean   @default(false)
}

